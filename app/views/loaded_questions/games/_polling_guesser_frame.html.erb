<%# locals: (game:, guessing_round_form:) %>
<%= render "loaded_questions/games/question_card", question: game.question %>

<% unless guessing_round_form.errors[:base].empty? %>
  <div class="alert alert-danger" role="alert">
    <h6 class="alert-heading mb-2">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>Cannot Begin Guessing
    </h6>
    <% guessing_round_form.errors[:base].each do |error| %>
      <div>
        &bull; <%= error.full_message %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="card shadow-sm">
  <div class="card-body" data-controller="dialog">
    <h5 class="card-title text-success mb-3">
      <i class="bi bi-star-fill me-2"></i>You're the Guesser!
    </h5>
    <p class="card-text text-muted mb-3">
      Waiting for all players to submit their answers. Once everyone has answered, you can begin matching answers to players.
    </p>
    <button type="button" class="btn btn-primary btn-lg w-100" data-action="dialog#open">
      <i class="bi bi-play-circle-fill me-2"></i>Begin Guessing
    </button>

    <dialog data-dialog-target="dialog" class="border-0 p-4 rounded-3 shadow-lg" style="max-width: 500px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fs-5 mb-0"><i class="bi bi-play-circle me-2"></i>Begin Guessing</h1>
        <button type="button" class="btn-close" data-action="dialog#close" aria-label="Close"></button>
      </div>
      <p class="mb-3">
        Are you ready to begin guessing? All answers have been submitted.
      </p>
      <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" data-action="dialog#close">
          Close
        </button>
        <%= form_with(model: guessing_round_form, scope: :game, url: guessing_round_loaded_questions_game_path(game.slug), method: :patch) do |form| %>
          <%= form.submit "Yes, I am ready", class: "btn btn-primary" %>
        <% end %>
      </div>
    </dialog>
  </div>
</div>

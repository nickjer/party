{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@herb-tools/formatter": "^0.7.5",
    "@herb-tools/linter": "^0.7.5",
    "esbuild": "^0.25.11"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "herb:format": "herb-format",
    "herb:format:check": "herb-format --check",
    "herb:lint": "herb-lint"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@popperjs/core": "^2.11.8",
    "@stimulus-components/dialog": "^1.0.1",
    "@stimulus-components/reveal": "^5.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "sass": "^1.93.2",
    "sortablejs": "^1.15.6"
  }
}

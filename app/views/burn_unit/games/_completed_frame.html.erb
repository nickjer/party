<%# locals: (game:, current_player:) %>

<%= render "burn_unit/games/question_card", question: game.question %>

<div class="card shadow-sm mb-3">
  <div class="card-header bg-success text-white">
    <h5 class="mb-0"><i class="bi bi-trophy-fill me-2"></i>Results</h5>
  </div>

  <div class="card-body p-0">
    <div id="candidates" class="list-group list-group-flush">
      <%= render(partial: "burn_unit/games/completed_candidate",
        collection: game.candidates, as: :candidate) %>
    </div>
  </div>
</div>

<% unless current_player.judge? %>
  <%= link_to new_round_burn_unit_game_path(game.id), class: "btn btn-danger btn-lg w-100" do %>
    <i class="bi bi-plus-circle-fill me-2"></i>
    Create Next Round
  <% end %>
<% end %>

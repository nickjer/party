<%# locals: (game:, current_player:, vote_form:, completed_round_form:) %>

<%= turbo_frame_tag "game_frame" do %>
  <div class="d-flex flex-wrap flex-md-nowrap align-items-start gap-2 mt-2">
    <div class="flex-grow-1">
      <%= turbo_frame_tag "round_frame" do %>
        <%= render "burn_unit/games/polling_judge_frame", game:, vote_form:, completed_round_form: %>
      <% end %>
    </div>

    <%= render "burn_unit/games/players_list", players: game.players, current_player: %>
  </div>
<% end %>

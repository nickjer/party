<%# locals: (game:) %>

<%= render "loaded_questions/games/question_card", question: game.question %>

<div class="card shadow-sm mb-3">
  <div class="card-body">
    <h5 class="card-title text-info mb-3">
      <i class="bi bi-hourglass-split me-2"></i>
      Guessing in Progress
    </h5>

    <p class="card-text text-muted mb-3">
      <span data-player-name-id="<%= game.guesser.id %>"><%= game.guesser.name %></span>
      is currently matching answers to players. Sit tight!
    </p>
  </div>
</div>

<%= render "loaded_questions/games/guesses_display", guesses: game.guesses %>

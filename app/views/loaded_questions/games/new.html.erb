<h1 class="text-2xl font-bold my-2">Loaded Questions</h1>

<%= form_with(model: @new_game, scope: :game, url: loaded_questions_games_path) do |form| %>
  <div>
    <%= form.label :player_name, class: "mt-3 block" %>
    <%= form.text_field :player_name, class: "mt-0.5 block w-full", maxlength: ::Player::MAX_NAME_LENGTH %>
  </div>

  <div>
    <%= form.label :question, class: "mt-3 block" %>
    <%= form.text_area :question, class: "mt-0.5 block w-full", maxlength: ::Game::MAX_QUESTION_LENGTH %>
  </div>

  <div class="flex items-center mt-3">
    <%= form.check_box :hide_answers %>
    <%= form.label :hide_answers, class: "ms-2" %>
  </div>

  <%= form.submit "Create New Game", class: "mt-3 w-full" %>
<% end %>

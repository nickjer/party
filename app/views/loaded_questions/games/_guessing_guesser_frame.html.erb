<%# locals: (game:, completed_round_form:) %>

<style>
  .answer-pool .unassign-btn { display: none; }
  .player-slot .answer-card { width: 100%; }
  .player-slot .answer-text { flex: 1; }
</style>

<%= render "loaded_questions/games/question_card", question: game.question %>

<% unless completed_round_form.errors[:base].empty? %>
  <div class="alert alert-danger" role="alert">
    <h6 class="alert-heading mb-2">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      Cannot Complete Matching
    </h6>
    <% completed_round_form.errors[:base].each do |error| %>
      <div>&bull; <%= error.full_message %></div>
    <% end %>
  </div>
<% end %>

<div
  data-controller="guess-assignment"
  data-guess-assignment-url-value="<%= assign_guess_loaded_questions_game_path(game.id) %>"
>
  <%# Loading overlay %>
  <div
    data-guess-assignment-target="overlay"
    class="d-none position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
    style="background: rgba(0,0,0,0.3); z-index: 1000;"
  >
    <div class="spinner-border text-light" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title text-info mb-2">
        <i class="bi bi-people-fill me-2"></i>
        Match Answers to Players
      </h5>
      <p class="card-text text-muted small mb-3">
        Drag answers onto players to match them.
      </p>

      <%# Answer pool %>
      <div class="answer-pool d-flex flex-wrap gap-2 mb-3" data-guess-assignment-target="pool">
        <% game.guesses.unassigned_answers.each do |answer| %>
          <%= render "loaded_questions/games/draggable_answer", answer: %>
        <% end %>
      </div>

      <%# Player slots %>
      <% game.guesses.sort_by { |guess| guess.player.name }.each do |guess| %>
        <div class="mb-2">
          <div class="fw-bold text-secondary small"><%= guess.player.name %></div>
          <div
            class="player-slot p-1 rounded border"
            data-guess-assignment-target="playerSlot"
            data-player-id="<%= guess.player.id %>"
            style="min-height: 44px;"
          >
            <% if guess.assigned? %>
              <%= render "loaded_questions/games/draggable_answer", answer: guess.guessed_answer %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div data-controller="dialog">
  <button
    type="button"
    class="mt-3 w-100 btn btn-primary btn-lg"
    data-action="dialog#open"
  >
    <i class="bi bi-check-circle-fill me-2"></i>
    Complete Matching
  </button>

  <dialog
    data-dialog-target="dialog"
    class="border-0 p-4 rounded-3 shadow-lg"
    style="max-width: 500px;"
  >
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="fs-5 mb-0">
        <i class="bi bi-check-circle me-2"></i>
        Complete Matching
      </h1>
      <button
        type="button"
        class="btn-close"
        data-action="dialog#close"
        aria-label="Close"
      ></button>
    </div>

    <p class="mb-3">
      Are you sure you would like to finalize your matched answers?
    </p>

    <div class="d-flex justify-content-end gap-2">
      <button
        type="button"
        class="btn btn-secondary"
        data-action="dialog#close"
      >
        Close
      </button>
      <%= button_to("Yes, I am sure",
        completed_round_loaded_questions_game_path(game.id),
        method: :patch,
        class: "btn btn-primary",
        data: { turbo_frame: "game_frame" }) %>
    </div>
  </dialog>
</div>

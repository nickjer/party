<%# locals: (new_player:) %>

<div class="row justify-content-center py-4">
  <div class="col-md-8 col-lg-6">
    <%= link_to root_path, class: "btn btn-link ps-0 mb-3" do %>
      <i class="bi bi-arrow-left me-1"></i>
      Back to Games
    <% end %>

    <div class="card shadow">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <h1 class="h2 text-danger mb-2">
            <i class="bi bi-fire me-2"></i>
            Burn Unit
          </h1>
          <p class="text-muted mb-0">Join the game and start playing!</p>
        </div>

        <%= form_with(model: new_player, scope: :player, url: burn_unit_game_player_path(new_player.game.id)) do |form| %>
          <div class="mb-4">
            <%= form.label :name, "Your Name" %>
            <%= form.text_field :name,
                maxlength: Player::MAX_NAME_LENGTH,
                placeholder: "Enter your name",
                autofocus: true %>
            <div class="form-text">
              <%= Player::MIN_NAME_LENGTH %>-<%= Player::MAX_NAME_LENGTH %> characters
            </div>
          </div>

          <%= form.submit "Join Game", class: "btn-lg w-100 btn-danger" %>
        <% end %>
      </div>
    </div>

    <div class="text-center mt-3">
      <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        Vote for players and see who gets burned!
      </small>
    </div>
  </div>
</div>

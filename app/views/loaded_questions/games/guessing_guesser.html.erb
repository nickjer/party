<%= render layout: "loaded_questions/games/game" do %>
  <div id="answers" class="mt-2 px-2 pb-2 border rounded-lg"
    data-controller="swap">
    <%=
      render(
        partial: "loaded_questions/games/guessed_answer",
        collection: @game.guesses,
        as: :guessed_answer,
        locals: { gripper: true }
      )
    %>
  </div>
<% end %>
